apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: minio-tenant-console
  namespace: {{ TENANT_NAMESPACE }}
  annotations:
    ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
    nginx.ingress.kubernetes.io/force-ssl-redirect: "true"    
  labels:
    managed-by: ansible
spec:
  rules:
  - host: minio-tenant-console.developer-center.yyuap.local
    http:
      paths:
      - path: /
        backend:
          serviceName: {{ TENANT_NAMESPACE }}-console
          servicePort: 9443
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: minio-tenant
  namespace: {{ TENANT_NAMESPACE }}
  annotations:
    ingress.kubernetes.io/rewrite-target: /
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
  labels:
    managed-by: ansible
spec:
  rules:
  - host: minio-tenant.developer-center.yyuap.local
    http:
      paths:
      - path: /
