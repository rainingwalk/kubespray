
{% for node in minio_groups %}
{% for index in range(1,5) %}
---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: pv-{{ node }}-{{ index }}
  labels:
    managed-by: ansible
spec:
  capacity:
    storage: {{ CAPACITY_PER_COLUME }}
  accessModes:
  - ReadWriteOnce
  storageClassName: {{ STORAGE_CLASS_NAME }} 
  local:
    path: /data/minio/pv-{{ index }}
  nodeAffinity:
    required:
      nodeSelectorTerms:
      - matchExpressions:
        - key: kubernetes.io/hostname
          operator: In
          values:
          - {{ node }}
{% endfor %}
{% endfor %}