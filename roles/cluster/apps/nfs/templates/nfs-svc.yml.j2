---
apiVersion: v1
kind: Service
metadata:
  name: nfs-server
  namespace: "{{ nfs_namespace }}"
spec:
  sessionAffinity: None
  ports:
    - name: tcp-2049
      port: 2049
      protocol: TCP
      targetPort: 2049
    - name: udp-2049
      port: 2049
      protocol: UDP
      targetPort: 2049
    - name: tcp-111
      port: 111
      protocol: TCP
      targetPort: 111
    - name: udp-111
      port: 111
      protocol: UDP
      targetPort: 111
    - name: tcp-32765
      port: 32765
      protocol: TCP
      targetPort: 32765
    - name: udp-32765
      port: 32765
      protocol: UDP
      targetPort: 32765
    - name: tcp-32767
      port: 32767
      protocol: TCP
      targetPort: 32767
    - name: udp-32767
      port: 32767
      protocol: UDP
      targetPort: 32767
  selector:
    role: nfs-server
